{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://app.pixiebrix.com/schemas/recipe#",
  "type": "object",
  "title": "PixieBrix Recipe",
  "description": "A PixieBrix recipe for one or more installed blocks",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["v1"]
    },
    "kind": {
      "type": "string",
      "const": "recipe"
    },
    "metadata": {"$ref": "https://app.pixiebrix.com/schemas/metadata#"},
    "extensionPoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The id of the extension point"
          },
          "services": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "label": {
            "type": "string",
            "description": "A human-readable name for the installed block"
          },
          "config": {
            "type": "object",
            "description": "Configuration for the extension point"
          }
        },
        "required": ["id", "config"]
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata"]
}
